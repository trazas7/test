<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>660765f8-aedc-4bbc-9a62-c5e7d911098d</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Contoso</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="ScrAibe"/>
  <Description DefaultValue="Outlook task pane add-in for local PoC."/>
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://localhost:3000"/>

  <!-- Allow localhost resources -->
  <AppDomains>
    <AppDomain>https://localhost:3000</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Optional: show pane automatically in read form (desktop) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- keep permissions minimal unless you need write -->
  <Permissions>ReadItem</Permissions>

  <!-- Show on message read surfaces -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- Ribbon commands + resources -->
  <VersionOverrides
      xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
      xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>

                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

                <Control xsi:type="Button" id="ActionButton">
                  <Label resid="ActionButton.Label"/>
                  <Supertip>
                    <Title resid="ActionButton.Label"/>
                    <Description resid="ActionButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>action</FunctionName>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3000/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3000/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3000/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://localhost:3000/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="ScrAibe"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Task Pane"/>
        <bt:String id="ActionButton.Label" DefaultValue="Do Action"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open the ScrAibe task pane."/>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Run a sample function."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>



# === DEV PREP (Admin shell) ===
# Trust the localhost dev certificate (accept any prompts)
npx office-addin-dev-certs install

# Add WebView host loopback exemptions (lets Outlook’s WebView reach localhost)
C:\Windows\System32\CheckNetIsolation.exe LoopbackExempt -a -n="Microsoft.Win32WebViewHost_cw5n1h2txyewy"
C:\Windows\System32\CheckNetIsolation.exe LoopbackExempt -a -n="Microsoft.Win32WebViewHost_8wekyb3d8bbwe"

# Verify exemption is present (you should see microsoft.win32webviewhost…)
C:\Windows\System32\CheckNetIsolation.exe LoopbackExempt -s





# === RUN YOUR LOCAL SERVER (normal shell) ===
cd "C:\Users\boul3\Documents\Personal\my-outlook-addin\ScrAibe"

# Install deps (safe to re-run)
npm install

# Start a dev server on https://localhost:3000 (pick the script your template has)
# If you have webpack dev server:
npm run dev-server
# Otherwise just build once:
# npm run build



# Start Outlook debugging without sideload (avoids 401/Teams CLI)
npx office-addin-debugging start ./manifest.xml --app outlook --no-sideload



# === ADMIN ONLY (Exchange Online PowerShell) ===
Install-Module ExchangeOnlineManagement -Scope AllUsers -Force
Import-Module ExchangeOnlineManagement
Connect-ExchangeOnline

# Replace email + manifest path:
$Mailbox = "jhon@gmail.com"
$ManifestPath = "C:\Path\To\manifest.xml"

# Deploy add-in to THIS mailbox only
New-App -Mailbox $Mailbox -FileData ([System.IO.File]::ReadAllBytes($ManifestPath)) -Enabled $true

# Confirm it’s installed
Get-App -Mailbox $Mailbox | Format-Table DisplayName, Enabled, ProvidedTo, AppId




















