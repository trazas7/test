// Minimal + maintainable
async function getWordText(task: { shouldSelectText: boolean; name: string }) {
  // 1) Get the current selection (works in body and text boxes)
  const selected = await getSelectionText();
  if (selected) return selected;

  // 2) Optional fallback: whole body
  if (!task.shouldSelectText && task.name !== "AD_HOC") {
    return Word.run(async (ctx) => {
      const body = ctx.document.body;
      body.load("text");
      await ctx.sync();
      return (body.text || "").trim();
    });
  }

  return "";
}

function getSelectionText(): Promise<string> {
  return new Promise((resolve) => {
    Office.context.document.getSelectedDataAsync(
      Office.CoercionType.Text, // change to Html if you prefer, see note below
      (res) => {
        if (res.status === Office.AsyncResultStatus.Succeeded) {
          resolve(String(res.value || "").trim());
        } else {
          resolve("");
        }
      }
    );
  });
}