const add = (tag: string, value: string) =>
    saveSubscription.tagValues.push({ tag, value } as TagValue);

  const addSet = (tag: string, set?: Set<string>) => {
    if (set && set.size > 0) {
      set.forEach(v => add(tag, v));
    } else {
      add(tag, 'ALL_VALUES');
    }
  };

  // -----------------------------
  // EXISTING TAGS (fallback to ALL_VALUES)
  // -----------------------------
  // Asset Class and Region come from your UI
  addSet('Asset_Class', this.selectedAssetClass);
  addSet('Region', this.selectedRegions);

  // If you donâ€™t collect these yet on the new page, keep ALL_VALUES
  add('Publication Type', 'ALL_VALUES');
  add('Language', 'ALL_VALUES');
  add('Industry Group', 'ALL_VALUES');
