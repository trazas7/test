<Hosts>
  <Host Name="Mailbox"/>
</Hosts>

<Requirements>
  <Sets DefaultMinVersion="1.5">
    <Set Name="Mailbox"/>
  </Sets>
</Requirements>


<VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                  xsi:type="VersionOverridesV1_1">
  <Hosts>
    <Host xsi:type="MailHost">
      <DesktopFormFactor>
        <!-- Ribbon button shown while composing -->
        <ExtensionPoint xsi:type="MessageComposeCommandSurface">
          <OfficeTab id="TabDefault">
            <Group id="msgComposeGroup">
              <Label resid="groupLabel"/>
              <Control xsi:type="Button" id="msgComposeButton">
                <Label resid="buttonLabel"/>
                <Supertip>
                  <Title resid="superTipTitle"/>
                  <Description resid="superTipDesc"/>
                </Supertip>
                <Icon>
                  <bt:Image size="16" resid="icon16"/>
                  <bt:Image size="32" resid="icon32"/>
                  <bt:Image size="80" resid="icon80"/>
                </Icon>
                <Action xsi:type="ShowTaskPane">
                  <SourceLocation resid="taskPaneUrl"/>
                  <SupportsPinning>true</SupportsPinning>
                </Action>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </DesktopFormFactor>
    </Host>
  </Hosts>

  <!-- Strings, URLs, and icons the button uses -->
  <Resources>
    <bt:Images>
      <bt:Image id="icon16" DefaultValue="https://YOURDOMAIN.com/assets/icon-16.png"/>
      <bt:Image id="icon32" DefaultValue="https://YOURDOMAIN.com/assets/icon-32.png"/>
      <bt:Image id="icon80" DefaultValue="https://YOURDOMAIN.com/assets/icon-80.png"/>
    </bt:Images>

    <bt:Urls>
      <!-- The HTML page for your task pane -->
      <bt:Url id="taskPaneUrl" DefaultValue="https://YOURDOMAIN.com/taskpane.html"/>
    </bt:Urls>

    <bt:ShortStrings>
      <bt:String id="groupLabel" DefaultValue="My Add-in"/>
      <bt:String id="buttonLabel" DefaultValue="Open My Add-in"/>
      <bt:String id="superTipTitle" DefaultValue="Open My Add-in"/>
    </bt:ShortStrings>
    <bt:LongStrings>
      <bt:String id="superTipDesc" DefaultValue="Open the task pane while composing to use add-in features."/>
    </bt:LongStrings>
  </Resources>
</VersionOverrides>

<Permissions>ReadWriteItem</Permissions>

<!-- Target only compose (edit) scenarios -->
<Rule xsi:type="RuleCollection" Mode="Or">
  <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
</Rule>









